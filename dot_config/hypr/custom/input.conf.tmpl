# *********************************************************************
# ******************************* INPUT *******************************
# *********************************************************************
# https://wiki.hypr.land/Configuring/Variables/#input

input {
  # Keyboard
  kb_layout = us

  # Mouse
  # sensitivity: Range is [-1.0, 1.0], 0 means no modification.
  {{- if eq .chezmoi.hostname "gored" }}
  sensitivity = 0
  {{- else if eq .chezmoi.hostname "gorel" }}
  sensitivity = 0.5
  {{- end }}
  accel_profile = flat
  follow_mouse = 1

  # Laptop
  scroll_method = 2fg
  touchpad {
    natural_scroll = true
    scroll_factor = 0.5
  }
}

# https://wiki.hypr.land/Configuring/Gestures
gesture = 3, horizontal, workspace # Swipe horizontally 3 fingers: Switch workspaces
gesture = 3, up, dispatcher, exec, $menu # Swipe up 3 fingers: Open app launcher
gesture = 3, down, fullscreen # Swipe down 3 fingers: Fullscreen active window
